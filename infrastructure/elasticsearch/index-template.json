{
  "index_patterns": ["behaviorlog-*"],
  "template": {
    "settings": {
      "index.lifecycle.name": "behaviorlog-ilm-policy",
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "properties": {
        "userId": { "type": "keyword" },
        "anonymousId": { "type": "keyword" },
        "action": { "type": "keyword" },
        "path": { "type": "keyword" },
        "method": { "type": "keyword" },
        "ip": { "type": "ip" },
        "referrer": { "type": "keyword" },
        "deviceType": { "type": "keyword" },
        "responseTime": { "type": "integer" },
        "timestamp": { "type": "date" }
      }
    }
  }
}
